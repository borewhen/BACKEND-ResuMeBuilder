FROM python:3.10.5

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    g++ \
    make \
    cmake \
    libblas-dev \
    liblapack-dev \
    libopenblas-dev \
    libatlas-base-dev \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libgl1-mesa-dev \
    libgtk2.0-0 \
    libpq-dev \
    libssl-dev \
    curl \
    xvfb \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

ENV BLIS_ARCH="generic" \
    DISPLAY=":99" \
    LD_LIBRARY_PATH="/usr/lib/x86_64-linux-gnu:/usr/lib"

COPY requirements.txt .
RUN pip install --upgrade pip==24.0 && \
    pip install -r requirements.txt

COPY . .

# virtual display
CMD ["sh", "-c", "Xvfb :99 -screen 0 1024x768x24 & uvicorn app.main:app --host 0.0.0.0 --port 8000"]